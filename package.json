{
	"name": "@placemarkio/polyline",
	"version": "2.0.0",
	"description": "encode and decode polylines",
	"scripts": {
		"test": "vitest run",
		"test:ci": "vitest run",
		"lint": "biome check",
		"doc": "typedoc --options ./typedoc.json",
		"prepare": "zshy"
	},
	"zshy": "./src/index.ts",
	"peerDependencies": {
		"@types/geojson": "*"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/placemark/polyline.git"
	},
	"author": "Tom MacWright",
	"license": "MIT",
	"dependencies": {
		"@biomejs/biome": "^2.3.5",
		"@types/geojson": "*"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"standard-version": "^9.5.0",
		"tslib": "^2.4.0",
		"typedoc": "^0.23.15",
		"typescript": "^5.9.3",
		"vitest": "^4.0.9",
		"zshy": "^0.4.4"
	},
	"keywords": [
		"polyline",
		"geojson"
	],
	"files": [
		"**/*.js",
		"**/*.mjs",
		"**/*.cjs",
		"**/*.d.ts",
		"**/*.d.mts",
		"**/*.d.cts"
	],
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.cts",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.cts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	}
}
